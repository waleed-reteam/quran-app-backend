{
  "name": "quran-app-backend",
  "version": "1.0.0",
  "description": "Backend API for Islamic Mobile App with Quran, Hadiths, Duas, Prayer Times, and AI Search",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "npx tsc",
    "start": "node dist/server.js",
    "netlify-dev": "netlify dev",
    "seed:quran": "ts-node src/scripts/seedQuran.ts",
    "seed:hadiths": "ts-node src/scripts/seedHadiths.ts",
    "seed:duas": "ts-node src/scripts/seedDuas.ts",
    "seed:all": "npm run seed:quran && npm run seed:hadiths && npm run seed:duas",
    "verify:quran-api": "ts-node src/scripts/seedQuran.ts",
    "verify:hadith-api": "ts-node src/scripts/seedHadiths.ts",
    "verify:all-apis": "npm run verify:quran-api && npm run verify:hadith-api",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "quran",
    "hadith",
    "islamic",
    "prayer",
    "dua",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@pinecone-database/pinecone": "^1.1.2",
    "@types/ejs": "^3.1.5",
    "@types/nodemailer": "^7.0.4",
    "aws-sdk": "^2.1524.0",
    "axios": "^1.6.5",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.11",
    "openai": "^4.24.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "redis": "^4.6.12",
    "serverless-http": "^3.2.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^4.0.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "netlify-cli": "^17.0.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
